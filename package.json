{
  "name": "Northwind-Demo-Application",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsc -p ./public/src/",
    "build:dist": "ngc -p public/tsconfig-dist.json && rollup -c public/rollup-config.js",
    "build:watch": "tsc -p ./public/src/ -w",
    "test": "npm run test:server",
    "test:server": "mocha ./app/tests --recursive --timeout 5000 --reporter mochawesome",
    "serve": "nodemon server.js",
    "serve:dist": "node server.js",
    "start": "concurrently \"npm run build:watch\" \"npm run serve\"",
    "start:dist": "npm run build:dist && npm run serve:dist"
  },
  "dependencies": {
    "@angular/common": "^2.4.10",
    "@angular/compiler": "^2.4.10",
    "@angular/compiler-cli": "^2.4.10",
    "@angular/core": "^2.4.10",
    "@angular/forms": "^2.4.10",
    "@angular/http": "^2.4.10",
    "@angular/material": "~2.0.0-beta.2",
    "@angular/platform-browser": "^2.4.10",
    "@angular/platform-browser-dynamic": "^2.4.10",
    "@angular/platform-server": "^2.4.10",
    "@angular/router": "^3.4.10",
    "bcrypt": "~1.0.2",
    "bluebird": "~3.5.0",
    "body-parser": "^1.17.1",
    "bootstrap": "~4.0.0-alpha.6",
    "core-js": "^2.4.1",
    "connect-pg-simple": "^3.1.2",
    "dotenv": "~4.0.0",
    "express": "~4.15.2",
    "express-session": "~1.15.1",
    "hammerjs": "2.0.8",
    "jquery": "~3.1.1",
    "method-override": "~2.3.7",
    "morgan": "1.8.1",
    "passport": "0.3.2",
    "passport-local": "~1.0.0",
    "path": "~0.12.7",
    "pg-promise": "~5.6.3",
    "rxjs": "~5.2.0",
    "systemjs": "0.20.9",
    "typescript": "^2.2.1",
    "zone.js": "^0.7.4"
  },
  "devDependencies": {
    "@types/node": "~7.0.5",
    "rollup": "^0.41.6",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "jasmine": "~2.5.3",
    "typescript": "~2.2.1",
    "browser-sync": "~2.18.8",
    "chai": "~3.5.0",
    "chai-http": "^3.0.0",
    "concurrently": "~3.4.0",
    "mocha": "~3.2.0",
    "mochawesome": "~2.0.3",
    "nodemon": "~1.11.0",
    "rewire": "2.5.2"
  }
}
